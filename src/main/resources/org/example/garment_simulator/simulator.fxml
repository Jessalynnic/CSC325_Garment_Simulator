<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefWidth="600.0" spacing="10" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.garment_simulator.SimulatorController">
    <children>
        <HBox alignment="CENTER" spacing="10">
              <ImageView fx:id="professionalTopView" fitHeight="200" fitWidth="200" preserveRatio="true" />
              <ImageView fx:id="professionalPantView" fitHeight="200" fitWidth="200" preserveRatio="true" />
              <ImageView fx:id="professionalShoeView" fitHeight="200" fitWidth="200" preserveRatio="true" />
        </HBox>
           <Button onAction="#displayProfessionalGarments" text="Professional Garments" />
        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="10">
         <children>
                 <ImageView fx:id="casualTopView" fitHeight="200" fitWidth="200" preserveRatio="true" />
                 <ImageView fx:id="casualPantView" fitHeight="200" fitWidth="200" preserveRatio="true" />
                 <ImageView fx:id="casualShoeView" fitHeight="200" fitWidth="200" preserveRatio="true" />
         </children>
      </HBox>
           <Button onAction="#displayCasualGarments" text="Casual Garments" />
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <ImageView fx:id="partyTopView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="partyPantView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <ImageView fx:id="partyShoeView" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
         </children>
      </HBox>
      <Button mnemonicParsing="false" onAction="#displayPartyGarments" text="Party Garments" />
    </children>
</VBox>
